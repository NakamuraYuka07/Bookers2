<%= flash[:notice] %>
<div class = "container px-5 px-sm0">
  <div class = "row">
    <div class ="col-md-3">
      <%= render 'books/book',book: @book, user: @user%>
    </div>
    <div class="col-md-8  offset-md-1">
      <h2>Book detail</h2>
        <table class = "table">
          <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @book_show.user, :profile_image, :fill, 40, 40, fallback: 'no_image.jpg', size:'40x40' %>
              </td>
              <td>
                <span><%= link_to @book_show.user.name, "/users/#{@book_show.user.id}" %></span>
              </td>
              <td>
                <span><%= link_to @book_show.title, "/books/#{@book_show.id}" %></span>
              </td>
              <td>
                <%= @book_show.body %>
              </td>
                <% if @book_show.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-secondary"%>
              </td>
              <td>
                <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
              </td>
              <% end %>
            </tr>
          </tbody>
       </table>
    </div>
  </div>  
</div>